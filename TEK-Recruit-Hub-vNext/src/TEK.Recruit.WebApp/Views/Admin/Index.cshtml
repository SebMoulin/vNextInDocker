@{
    ViewBag.Title = "Admin area";
}

@model TEK.Recruit.Web.ViewModels.CustomerViewModel

<h2>Set up Elastic Search</h2>


@using (Html.BeginForm("CreateCustomer", "Admin", new { }, FormMethod.Post, new { }))
{
    <div class="row">
        <h3>Add a customer:</h3>
        @Html.ValidationSummary()
        @Html.AntiForgeryToken()
        <div class="form-group">
            @Html.LabelFor(x => x.CustomerName, new { @class = "control-label" })
            @Html.TextBoxFor(x => x.CustomerName, new { @class = "form-control input-sm", placeholder = "Customer name" })
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-xs btn-primary">Save</button>
        </div>
    </div>
}

<div class="row">
    <table class="table table-hover table-striped table-condensed">
        <thead>
            <tr>
                <th class="col-md-2">
                    <label>Candidate</label>
                </th>
                <th>

                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in @Model.Customers)
            {
                <tr>
                    <td class="col-md-2">
                        <span>@customer.Name</span>
                    </td>
                    <td>
                        @Html.ActionLink("Delete Recruiter Report Index", "DeleteRecruiterReportIndex", "Admin", new { customerId = @customer.Id }, new { onclick = "return confirm('Are you sure you want to delete the recruiter report index?');", @class = "btn btn-xs btn-danger" })
                        @Html.ActionLink("Create Recruiter Report Mapping", "CreateRecruiterReportMapping", "Admin", new { customerId = @customer.Id }, new { onclick = "return confirm('This will set the mapping definition for the recruiter report in Elastic Search. This will fail is it already exists, are you sur you want to continue?');", @class = "btn btn-xs btn-danger" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>